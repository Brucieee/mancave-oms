{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./library.json",
  "compilerOptions": {
    "noEmit": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
